<div class="mt-4">
    <div class="row">

        {{#each courses}}
            <div class="col-sm-6 col-lg-3">
                <div class="card m-2 border-0">
                    <a href="/courses/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top rounded" alt="...">
                    </a>
                    <div class="card-body px-0">
                        <a class="text-decoration-none text-dark" href="/course/{{courses.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>