<div class="mt-3">
    <h2 class="mt-3 mb-4">Khóa học của tôi</h2>

    <table class="table table-hover">
        <thead>
            <th scope="col">STT</th>
            <th scope="col">Tên khóa học</th>
            <th scope="col">Trình độ</th>
            <th scope="col" colspan="2">Cập nhật lúc</th>
        </thead>

        <tbody>
            {{#each courses}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.updatedAt}}</td>
                    <td>
                        <a class="text-decoration-none" href="/courses/{{this._id}}/edit">Cập nhật</a>
                        <a class="text-decoration-none text-danger ms-4" href="#">Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>